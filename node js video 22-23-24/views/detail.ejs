<div class="row">
    <div class="col-md-8">
      <h2>Details</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        Contact not found,
        <a href="/contact" class="alert-link">Kembali ke daftar kontak</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.email %>
          </h6>
          <p class="card-text"><%= contact.phoneNumber %></p>
          <div class="col mb-2">
            <form
              action="/contact/delete/<%= contact.id %>?_method=DELETE"
              method="POST"
              onsubmit="return confirm('Are you sure?');"
            >
              <input type="hidden" name="_method" value="DELETE" />
              <button type="submit" class="btn btn-sm btn-danger mx-1">
                Hapus
              </button>
            </form>
          </div>
          <div class="col">
            <a href="/contact/edit/<%= contact.id %>" class="btn btn-sm btn-primary mx-1">Edit</a>
          </div>
          <div class="col">
            <a href="/contact" class="card-link m-2 d-block"
              >&laquo; Back to Contacts List</a
            >
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>